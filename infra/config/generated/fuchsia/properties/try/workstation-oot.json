{
  "recipe": "run_script",
  "recipes_use_py3": true,
  "remote": "https://fuchsia.googlesource.com/workstation",
  "script_configs": [
    {
      "script": "scripts/bootstrap.sh"
    },
    {
      "script": "scripts/build.sh",
      "script_args": [
        "-o",
        "{outdir}"
      ]
    },
    {
      "script": "scripts/upload.sh",
      "script_args": [
        "-b",
        "fuchsia-artifacts",
        "-n",
        "{build-id}"
      ]
    }
  ]
}